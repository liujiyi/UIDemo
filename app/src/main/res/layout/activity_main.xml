<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.dachui.uidemo.MainActivity">

    <com.example.dachui.cuttomview.ProgressView
        android:id="@+id/view"
        android:layout_width="90dp"
        android:layout_height="38dp"
        app:half_progress_Round="45dp"
        app:half_progress_direction="0"
        app:half_progress_used_bg="#FFFFA0BA" />

    <com.example.dachui.cuttomview.ProgressView
        android:id="@+id/view1"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        app:half_progress_direction="1" />

    <com.example.dachui.cuttomview.ProgressView
        android:id="@+id/view2"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="300dp"
                android:background="@color/colorAccent"
                android:gravity="center_vertical"
                android:text="ceshiscehihsiece" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_details_xfbg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/img_details_redpacket02" />

            <com.example.dachui.uidemo.RoundProgressBar
                android:id="@+id/roundProgressBar2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:textIsDisplayable="false"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="btn"
        android:text="anim" />
</LinearLayout>
